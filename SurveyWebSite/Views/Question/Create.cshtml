
@{
    ViewBag.Title = "Create New Question";
}
<h2>Create</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="form-horizontal">
    <div class="form-group">
        <label class="control-label" col-md-2>Text</label>
        <input type="text" class="form-control" name="Text" />
    </div>
    <div class="form-group">
        <label class="control-label" col-md-2>Order Number</label>
        <input type="number" class="form-control" name="Order" />
    </div>




    <div class="form-group">
        <label class="control-label" col-md-2>Slider :</label>@Html.RadioButton("team", "Slider", new { onclick = "showResult(this)" })
        <label class="control-label" col-md-2>Smile :</label>@Html.RadioButton("team", "Smile", new { onclick = "showResult(this)" })
        <label class="control-label" col-md-2>Star :</label>@Html.RadioButton("team", "Star", new { onclick = "showResult(this)" })
    </div>

    <div id="partialContainer"></div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-2">
            <label class="label-success">@ViewBag.SuccessMessage</label>
        </div>
    </div>
    <script type="text/javascript">
        function showResult(radio) {
            var selected = radio.value;
            if (selected == "Slider")
                document.getElementById("partialContainer").innerHTML
                    = `
     <div id="SliderDiv">

                <div class="form-group">
                    <label class="control-label" col-md-2>StartValue</label>
                    <input type="number" class="form-control"  name="StartValue" />
                </div>
                <div class="form-group">
                    <label class="control-label" col-md-2>EndValue</label>
                    <input type="number" class="form-control" id="EndValue" name="EndValue" />
                </div>
                <div class="form-group">
                    <label class="control-label" col-md-2>StartCaption</label>
                    <input type="text" class="form-control" id="StartCaption" name="StartCaption" />
                </div>
                <div class="form-group">
                    <label class="control-label" col-md-2>EndCaption</label>
                    <input type="text" class="form-control" id="EndCaption" name="EndCaption" />
                </div>


            </div>`
            else if (selected == "Smile")
                document.getElementById("partialContainer").innerHTML
                    = `<div id="SmileDiv">
                <div class="form-group">
                    <label class="control-label" col-md-2>Number of Smile Faces</label>
                    <input type="number" class="form-control" name="NumberOfSmile" />
                </div>

            </div>`
            else if (selected == "Star")
                document.getElementById("partialContainer").innerHTML
                    = `<div id="StarDiv">
                <div class="form-group">
                    <label class="control-label" col-md-2>Number of Stars</label>
                    <input type="number" class="form-control" name="NumberOfStar"  />
                </div>
            </div>`

        }
    </script>
    <div class="form-group">
        <div col-md-10">
            <input type="submit" value="Create" class="btn btn-default" style="white-space: normal; width:250px;background-color:white;" />
        </div>
    </div>
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>
}
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }